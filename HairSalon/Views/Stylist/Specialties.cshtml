
@{
Layout = "_Layout";
}


<div class="container">
<hr>
<h1>Stylists</h1>
@Model["stylist"].GetName()
@if (@Model["specialty"].Count != 0)
{
  <h4>This stylist has these specialty:</h4>
  <ul>
    @foreach (var specialty in @Model["specialty"])
    {
      <li>@specialty.GetSpecialtyName()</li>
    }
  </ul>
}
<hr>
<h4>Add a specialty to this stylist:</h4>
<form action='/stylists/@Model["stylist"].GetId()/specialties/new'method='post'>
  <label for='specialty-id'>Select a specialty</label>
  <select id='specialty-id' name='specialty-id' type='text'>
    @foreach (var specialty in @Model["allSpecialties"])
    {
      <option value='@specialty.GetSpecialtyId()'>@specialty.GetSpecialtyName()</option>
    }
  </select>
  <button type='submit'>Add:</button>
</form>
<hr>
